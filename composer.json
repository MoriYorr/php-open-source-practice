{
    "name": "moriyorr/php-open-source-practice",
    "description": "A sample project to demonstrate open-source best practices in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MoriYorr",
            "email": "yourmori1@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": "find src -name '*.php' -exec php -l {} \\;"
    }
}
